{
  "name": "zeroquake",
  "productName": "Zero Quake",
  "version": "0.9.5",
  "description": "Zero Quake",
  "scripts": {
    "start": "electron . --develop --debug-mode",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --linux --win"
  },
  "build": {
    "productName": "Zero Quake",
    "files": [
      "!CODE_OF_CONDUCT.md",
      "!CONTRIBUTING.md",
      "!SECURITY.md",
      "!PULL_REQUEST_TEMPLATE.md",
      "!tools/*",
      "!eslint.config.js"
    ],
    "win": {
      "icon": "src/img/icon.ico",
      "target": {
        "target": "nsis"
      }
    },
    "nsis": {
      "artifactName": "ZeroQuake_Setup.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true,
      "shortcutName": "Zero Quake"
    },
    "appx": {
      "displayName": "Zero Quake",
      "identityName": "Benidate.ZeroQuake",
      "applicationId": "Benidate.ZeroQuake",
      "publisherDisplayName": "Benidate",
      "publisher": "CN=0FCA04CE-D29D-4DB6-BA68-14F151A28AD4",
      "languages": [
        "JA-JP"
      ],
      "backgroundColor": "#202227"
    },
    "linux": {
      "icon": "src/img/icon.png",
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "desktop": {
        "entry": {
          "Name": "Zero Quake",
          "Comment": "地震・津波情報表示アプリケーション",
          "GenericName": "Earthquake Information",
          "Keywords": "earthquake;tsunami;disaster;防災;地震;津波",
          "StartupWMClass": "Zero Quake",
          "Terminal": "false",
          "Type": "Application",
          "Categories": "Utility;Network;"
        }
      },
      "maintainer": "benidate",
      "vendor": "benidate",
      "synopsis": "地震・津波情報をリアルタイムで表示",
      "description": "緊急地震速報、地震情報、津波情報などをリアルタイムで受信・表示するアプリケーション",
      "executableName": "zeroquake"
    },
    "deb": {
      "depends": [
        "libnotify4",
        "libxtst6",
        "libnss3",
        "libatspi2.0-0",
        "libdrm2",
        "libgbm1",
        "libxcb-dri3-0"
      ]
    }
  },
  "type": "module",
  "main": "src/main.js",
  "author": "benidate",
  "license": "GPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0Quake/Zero-Quake.git"
  },
  "bugs": {
    "url": "https://github.com/0Quake/Zero-Quake/issues"
  },
  "homepage": "https://0quake.github.io/ZeroQuake_Website/",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "globals": "^16.5.0",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "@turf/turf": "^7.3.1",
    "electron-store": "^11.0.2",
    "jsdom": "^27.3.0",
    "maplibre-gl": "^5.15.0",
    "path": "^0.12.7",
    "pmtiles": "^4.3.1",
    "websocket": "^1.0.35"
  }
}